@model About
@{
    ViewData["Title"] = "AboutUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımda</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkımda Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <input type="hidden" asp-for="AboutID" />
                            <label>Başlık</label>
                            <input type="text" asp-for="Header" class="form-control" />
                            <br />
                            <label>Alt Metin</label>
                            <input type="text" asp-for="SubDescription" class="form-control" />
                            <br />
                            <label>Açıklama</label>
                            @Html.TextAreaFor(x=>x.Description,5,10, new {@class="form-control"})
                            <br />
                            <a href="/About/AboutList" class="btn btn-outline-secondary btn-round">Vazgeç</a>
                            <button class="btn btn-outline-primary btn-round">Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

