@model List<Referance>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referanslar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Referans Listem</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Refereler ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">İsim</th>
									<th scope="col">Pozisyon</th>
									<th scope="col">Yorum</th>
									<th scope="col">Referans Görsel</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ReferanceID</td>
										<td>@item.Name</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td><img src="@item.ImageUrl" style="height:50px; width:50px; border:groove; border-radius:15px;"  /></td>
										<td><a href="/Referance/ReferanceDelete/@item.ReferanceID" class="btn btn-outline-danger btn-round">Sil</a></td>
										<td><a href="/Referance/UpdateRef/@item.ReferanceID" class="btn btn-outline-info btn-round">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Referance/Create" class="btn btn-outline-primary btn-round">Yeni Referans Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
