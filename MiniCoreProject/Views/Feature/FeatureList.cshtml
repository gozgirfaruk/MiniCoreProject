@using MiniCoreProject.DTO.Entities
@model List<Feature>
@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkan </h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Kapak Bilgiler Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Kapak ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Unvan</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.FeatureID</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td><a href="/Feature/FeatureUpdate/@item.FeatureID" class="btn btn-outline-info btn-round">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

