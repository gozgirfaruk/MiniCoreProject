@model Feature
@{
    ViewData["Title"] = "FeatureUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Deneyimler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Deneyim Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <input type="hidden" asp-for="FeatureID" />
                            <label>Firma Bilgisi</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Çalışılan Pozisyon</label>
                            <input type="text" asp-for="Description" class="form-control" />
                            <br />
                          
                            <a href="/Feature/FeatureList" class="btn btn-outline-secondary btn-round">Vazgeç</a>
                            <button class="btn btn-outline-warning btn-round">Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
