@model List<ToDoList>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yapılacaklar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yapılacaklar Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Yapılacaklar ile ilgili işlemleri aşağıdaki panelden gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Tarih</th>
                                    <th scope="col">Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                              @foreach(var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title</td>
                                        <td>@item.Date.ToShortDateString()</td>
                                        @if (item.Status == true)
                                        {
                                            <td><a href="/ToDoList/ChangeToDoListStatusToFalse/@item.ToDoListID" class="btn btn-outline-danger btn-round">Yapılmadı</a></td>
                                        }
                                        else
                                        {
                                            <td><a href="/ToDoList/ChangeToDoListStatusToTrue/@item.ToDoListID" class="btn btn-outline-success btn-round">Yapıldı</a></td>
                                        }

                                        <td><a href="/ToDoList/DeleteToDoList/@item.ToDoListID" class="btn btn-outline-warning">Sil</a></td>
                                        <td><a href="/ToDoList/UpdateToDoList/@item.ToDoListID" class="btn btn-outline-info">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/ToDoList/CreateToDoList/" class="btn btn-outline-primary btn-round">Yeni Yapılacak İşlem Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>