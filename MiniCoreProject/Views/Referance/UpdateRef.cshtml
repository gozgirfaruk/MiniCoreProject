@model Referance
@{
    ViewData["Title"] = "UpdateRef";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referans</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Referans Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <input type="hidden" asp-for="ReferanceID" />
                            <label>Firma Bilgisi</label>
                            <input type="text" asp-for="Name" class="form-control" />
                            <br />
                            <label>Çalışılan Pozisyon</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Tarih Aralığı</label>
                            <input type="text" asp-for="Description" class="form-control" />
                            <br />
                            <label>Tarih Aralığı</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />
                            <a href="/Referance/Index" class="btn btn-outline-secondary btn-round">Vazgeç</a>
                            <button class="btn btn-outline-warning btn-round">Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
