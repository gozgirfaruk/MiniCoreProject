@model Referance
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referans</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Referans Ekleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<label>Firma Bilgisi</label>
							<input type="text" asp-for="Name" class="form-control" />
							<br />
							<label>Çalışılan Pozisyon</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Tarih Aralığı</label>
							<input type="text" asp-for="ImageUrl" class="form-control" />
							<br />
							<label>Tarih Aralığı</label>
							<input type="text" asp-for="Description" class="form-control" />
							<br />
							<a href="/Referance/Index/" class="btn btn-outlinealert-secondary btn-round">Vazgeç</a>
							<button class="btn btn-outline-info btn-round">Ekle</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

