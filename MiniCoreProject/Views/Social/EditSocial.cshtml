@model SocialMedia
@{
    ViewData["Title"] = "EditSocial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Medya Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <input type="hidden" asp-for="SocialMeadiID" />
                            <label>Firma Bilgisi</label>
                            <input type="text" asp-for="Name" class="form-control" />
                            <br />
                            <label>Çalışılan Pozisyon</label>
                            <input type="text" asp-for="Url" class="form-control" />
                            <br />
                            <label>Tarih Aralığı</label>
                            <input type="text" asp-for="Icon" class="form-control" />
                            <br />
                            <a href="/Social/SocialList" class="btn btn-outline-secondary btn-round">Vazgeç</a>
                            <button class="btn btn-outline-warning btn-round">Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
